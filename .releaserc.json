{
  "branches": ["main"],
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "npm run build:lib && npm version ${nextRelease.version} --no-git-tag-version --prefix dist/carbideui && test -f dist/carbideui/index.d.ts"
      }
    ],
    [
      "@semantic-release/npm",
      { "pkgRoot": "dist/carbideui" }
    ],
    [
      "@semantic-release/github",
      {
        "releasedLabels": ["status: released"]
      }
    ]
  ]
}
